<% layout('layouts/boilerplate')%>







    <div class="row">
        <h1 class="text-center">Edit  Venue</h1>
        <div class="col-6 offset-3">

            <form action="/Venuespaces/<%=venuespace._id%>?_method=PUT"  method="POST" novalidate class="validated-form" > 

                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="venuespace[title]" value="<%=venuespace.title %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="venuespace[location]" value="<%=venuespace.location %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="venuespace[image]" value="<%=venuespace.image %>" required>
                </div>
        

                <div class="mb-3">
                    <label class="form-label" for="image"> Description</label>
                    <textarea class="form-control" type="text" id="description"  required name="venuespace[description]"> <%=venuespace.description %></textarea>
                </div>


                <div class="mb-3">
                    <button class="btn btn-info">Update</button>
                </div>

            </form>
           <!-- <a href="/venuespaces">All Venues</a> -->
            <a href="/venuespaces/<%= venuespace._id%>">Back To venues</a>
        </div>
