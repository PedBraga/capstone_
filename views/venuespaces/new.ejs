<% layout('layouts/boilerplate')%>

<style>

    h1{
        font-family:Verdana, Geneva, Tahoma, sans-serif;
        font-size: 1.9rem;
    }

 body #form {
	 color: white;
	 background-color: #404446;
	 border-radius: 1px;
	 width: 500px;
	 padding: 40px;
	 margin: 50px auto;
	 -webkit-box-shadow: -1px 3px 18px 0px rgba(0, 0, 0, 0.75);
	 -moz-box-shadow: -1px 3px 18px 0px rgba(0, 0, 0, 0.75);
	 box-shadow: -1px 3px 18px 0px rgba(0, 0, 0, 0.75);
}
 body #form p {
	 font-size: 0.9em;
}
 body #form button {
	 width: 100%;
	 text-align: center;
	 color: rgb(253, 252, 252);
	 margin-top: 20px;
	 border: 0px solid rgba(255, 255, 255, 0.4);
}
 body #form .form-group {
	 margin: 15px auto;
}
 body #form .form-group label {
	 font-weight: bold;
	 font-size: 0.9em;
}
 body #form .form-group .input-group {
	 border-radius: 5px;
	 -webkit-box-shadow: -1px 3px 18px 0px rgba(0, 0, 0, 0.35);
	 -moz-box-shadow: -1px 3px 18px 0px rgba(0, 0, 0, 0.35);
	 box-shadow: -1px 3px 18px 0px rgba(0, 0, 0, 0.35);
}
 body #form .form-group .input-group .input-group-addon {
	 border: none;
	 border-right: 1px solid rgba(0, 0, 0, 0.2);
}
 body #form .form-group .input-group input {
	 padding-left: 10px;
}
 body #form .form-group .input-group i {
	 color: #000000;
}
 body #form .form-group input {
	 padding: 3px;
	 width: 100%;
	 border: none;
	 border-radius: 0 5px 5px 0;
}
 
.btn{
    font-size: 1.2em;
}
.btn:hover{
    background-color: #A8A8A8;
   
}
</style>



<div class="row">
        <h1 class="text-center">Add Venue</h1>
        <div class=" col-sm-6 col-md-6 offset-md-3">

            <form id="form" action="/venuespaces" method="POST" novalidate class="validated-form" >
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="venuespace[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="venuespace[location]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="venuespace[image]" required>
                </div>
        

                <div class="mb-3">
                    <label class="form-label" for="image"> Description</label>
                    <textarea class="form-control" type="text" id="description" name="venuespace[description]"> </textarea>
                </div>


                <div class="mb-3">
                    <button class="btn ">Add venue</button>
                </div>
                <a style="color: white; font-size: .8rem;" href="/venuespaces">All Venues</a>

            </form>
     

        </div>
    </div>
